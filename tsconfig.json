{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2015",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
  },
  "include": ["src/**/*.ts"]
}
